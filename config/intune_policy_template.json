{
  "policyName": "Baseline Compliance Policy",
  "description": "Default compliance policy enforcing encryption, password, and security baselines for all corporate devices.",
  "platforms": [
    "Windows10",
    "Windows11",
    "macOS",
    "iOS",
    "Android"
  ],
  "scope": {
    "includeGroups": [
      "AllDevices"
    ],
    "excludeGroups": [
      "KioskDevices",
      "LabSystems"
    ]
  },
  "complianceSettings": {
    "requireBitLocker": true,
    "firewallEnabled": true,
    "passwordRequired": true,
    "passwordMinimumLength": 8,
    "passwordExpirationDays": 90,
    "passwordPreviousPasswordBlockCount": 5,
    "osMinimumVersion": "10.0.19045",
    "osMaximumVersion": null,
    "jailbreakDetectionEnabled": true,
    "secureBootEnabled": true,
    "codeIntegrityEnabled": true,
    "deviceThreatProtectionRequiredSecurityLevel": "medium",
    "antivirusRequired": true,
    "automaticUpdatesEnabled": true
  },
  "deviceHealthAttestation": {
    "requireTPM": true,
    "requireSecureBoot": true,
    "requireCodeIntegrity": true
  },
  "conditionalAccessIntegration": {
    "markNonCompliantAfterDays": 3,
    "notifyUserOnNonCompliance": true,
    "emailNotificationRecipients": [
      "it-admins@yourdomain.com"
    ]
  },
  "remediationActions": {
    "1": {
      "action": "NotifyUser",
      "gracePeriodHours": 24
    },
    "2": {
      "action": "BlockAccess",
      "gracePeriodHours": 72
    }
  },
  "reporting": {
    "generateComplianceReports": true,
    "exportToLogAnalytics": true,
    "reportFrequency": "daily"
  },
  "metadata": {
    "createdBy": "Claney",
    "lastModified": "2024-10-07T00:00:00Z",
    "version": "3.4",
    "policyTemplate": "Enterprise Baseline - Security Hardened"
  }
}
